{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "categories": {
    "correctness": "error",
    "suspicious": "warn"
  },
  "plugins": ["typescript", "react", "oxc"],
  "jsPlugins": ["./scripts/oxlint-plugin-i18n.js"],
  "rules": {
    "no-console": "off",
    "react-in-jsx-scope": "off",
    "i18n/no-default-value": "error",
    "i18n/no-namespace-option": "error"
  },
  "env": {
    "browser": true,
    "es2024": true
  }
}
