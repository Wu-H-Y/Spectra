{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "categories": {
    "correctness": "error",
    "suspicious": "warn"
  },
  "plugins": ["typescript", "react", "oxc"],
  "rules": {
    "no-console": "warn",
    "react-in-jsx-scope": "off"
  },
  "env": {
    "browser": true,
    "es2024": true
  }
}
