{
  "name": "spectra",
  "version": "0.4.0",
  "private": true,
  "type": "module",
  "description": "Spectra 多媒体数据采集应用 - Git hooks 和代码质量工具",
  "scripts": {
    "prepare": "husky",
    "build:web": "cd web-editor && bun run build",
    "lint:dart": "dart analyze",
    "lint:web": "cd web-editor && bun run lint",
    "lint": "bun run lint:dart && bun run lint:web",
    "format:dart": "dart format .",
    "format:web": "cd web-editor && bun run fmt",
    "format": "bun run format:dart && bun run format:web"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  }
}