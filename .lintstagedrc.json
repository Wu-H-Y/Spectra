{
  "$schema": "https://json.schemastore.org/lintstagedrc.schema.json",
  "lib/**/*.dart": [
    "bun run lint:fix:dart",
    "bun run format:dart"
  ],
  "rust/**/*.rs": [
    "bun run lint:fix:rust",
    "bun run format:rust"
  ],
  "web-editor/**/*.{ts,tsx,json,css,scss,md}": [
    "bun run lint:fix:web",
    "bun run format:web"
  ]
}